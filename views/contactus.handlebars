                    <label for="contactEmail"></label>
                    <input type="text" class="form-control pt-3" id="contactEmail" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput"></label>
                    <input type="text" class="form-control pt-3 mb-4" id="formGroupExampleInput" placeholder="Enter your message here..">
                </div>
                <div id="submitContactButtonDiv">    
                    <button id="submitContactButton" type="button" class="btn btn-secondary btn-lg d-inline-flex justify-content-center pt-3 w-100">Submit</button>
