<!-- sign up form -->
  <div class="p-4 m-4 text-center align-items-center mw-lg-50%">
    <form id="sign-up-form-main-container"></form>
      <div class="row d-flex">
        <h1>Sign up with Shot-Map Today!</h1>
        <h3>Please fill out the information below. We will never share your personal information with anyone else.</h3>
        <div class="form-group text-start">
          <label for="fname">User Name</label>
          <input type="firstname" class="form-control mb-2" id="fname" placeholder="User Name">
        </div>
        <div class="form-group text-start">
          <label for="inputEmail4">Email</label>
          <input type="email" class="form-control mb-2" id="email" placeholder="Email">
        </div>
        <div class="form-group text-start">
          <label for="inputPassword4">Password</label>
          <input type="password"  class="form-control mb-4" id="password" placeholder="Password">
        </div>
        <div id="submitSignUpInfoBtn">
          <button id="btn" type="button" class="btn btn-secondary btn-lg d-inline-flex justify-content-center pt-3 w-100">Submit</button> 
        </div>
      </div>
    </form>
  </div>
  <script src='/js/sign-up.js'></script>