<!-- sign up form -->
  <div class="p-4 m-4 text-center align-items-center">
    <form id="sign-up-form-main-container" class="container-fluid col-md-10 col-lg-8 col-xl-7">
      <div class="row d-flex">
        <h1 class="mb-5">Sign up with Shot-Map Today!</h1>
        <h3 class="mb-5">Please fill out the information below. We will never share your personal information with anyone else.</h3>
        <div class="form-group text-start">
          <label for="fname">User Name</label>
          <input type="firstname" class="form-control mb-2" id="fname" placeholder="User Name">
        </div>
        <div class="form-group text-start">
          <label for="inputEmail4">Email</label>
          <input type="email" class="form-control mb-2" autocomplete="username" id="email" placeholder="Email">
        </div>
        <div class="form-group text-start">
          <label for="inputPassword4">Password</label>
          <input type="password"  class="form-control mb-4" autocomplete="password" id="password" placeholder="Password">
        </div>
        <div id="submitSignUpInfoDiv">
          <button id="signUpBtn" type="button" class="btn btn-secondary btn-lg d-inline-flex justify-content-center w-100">Submit</button> 
        </div>
      </div>
    </form>
  </div>
  <script src='/js/sign-up.js'></script>